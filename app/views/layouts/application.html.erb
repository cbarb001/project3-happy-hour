<!DOCTYPE html>
<html>
<head>
  <title>Cheers!</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

<!-- Map styling -->
  <style type="text/css">
    html, body, #map-canvas { height: 100%; margin: 0; padding: 0;}
  </style>

<!-- google maps API -->
  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyClelNPbq5nzHsR48z442fy7cXB1y0W8Hk"></script>

  <script type="text/javascript">
    function initialize() {
      var mapOptions = {
        center: { lat: 34.012982, lng: -118.495186 }, 
        zoom: 8
      };

      var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

    }
    google.maps.event.addDomListener(window, 'load', initialize);
  </script>

</head>
<body ng-app="happyHrApp">

 
<!-- <div id="map-canvas"></div> -->

  <nav class="navbar navbar-default" role="navigation">
   <div class="container-fluid">
     <!-- Brand and toggle get grouped for better mobile display -->
     <div class="navbar-header">
       <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
         <span class="sr-only">Toggle navigation</span>
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
       </button>
       <a class="navbar-brand" href="#">CHEERS</a>
     </div>

     <!-- Collect the nav links, forms, and other content for toggling -->
     <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
       <ul class="nav navbar-nav">
         <li><a href="#">Link</a></li>
         <li class="dropdown">
           <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
           <ul class="dropdown-menu" role="menu">
             <li><a href="#">Action</a></li>
             <li><a href="#">Another action</a></li>
             <li><a href="#">Something else here</a></li>
             <li class="divider"></li>
             <li><a href="#">Separated link</a></li>
             <li class="divider"></li>
             <li><a href="#">One more separated link</a></li>
           </ul>
         </li>
       </ul>
       <form class="navbar-form navbar-left" role="search">
         <div class="form-group">
           <input type="text" class="form-control" placeholder="Search for a city">
         </div>
         <button type="submit" class="btn btn-default">Search</button>
       </form>
       <ul class="nav navbar-nav navbar-right">
         <div>
           <li>
              <div ng-controller="ModalDemoCtrl">
                <script type="text/ng-template" id="logInModal.html">
                  <div class="modal-header">

                  </div>
                  <div class="modal-body">
                    <input type="text" placeholder="Email" ng-model="userEmail"><br>
                    <input type="text" placeholder="Password" ng-model="userPassword">
                  </div>
                  <div class="modal-footer">
                    <button class="btn btn-primary" ng-click="login()">Log In</button>
                    <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
                  </div>
                </script>
              <button ng-click="login(sm)" class="btn btn-primary">Log In</button>
              </div>
            </li>
           <l1>
            <div ng-controller="ModalDemoCtrl">
              <script type="text/ng-template" id="signUpModal.html">
                <div class="modal-header">

                </div>
                <div class="modal-body">
                  <input type="text" placeholder="First Name" ng-model="newUserName"><br>
                  <input type="text" placeholder="Last Name" ng-model="newUserLastName"><br>
                  <input type="text" placeholder="Email" ng-model="newUserEmail"><br>
                  <input type="text" placeholder="Password" ng-model="newUserPassword"><br>
                </div>
                <div class="modal-footer">
                  <button class="btn btn-primary" ng-click="submit()">Sign Up</button>
                  <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
                </div>
              </script>  
            <button ng-click="signUp(sm)" class="btn btn-primary">Sign Up</button>
            </div>
          </l1>
         </div>
       </ul>
     </div><!-- /.navbar-collapse -->
   </div><!-- /.container-fluid -->
  </nav>
